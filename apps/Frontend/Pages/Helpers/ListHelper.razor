                    <RadzenText TextStyle="TextStyle.Body2" Class="rz-mb-0">@helperItem.AboutMe</RadzenText>
                    <RadzenText TextStyle="TextStyle.Caption" Class="rz-mb-0">@helperItem.Name</RadzenText>
                </RadzenStack>
            </RadzenStack>
        </RadzenCard>
    </Template>
